<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingTop="8dp"
    android:paddingBottom="5dp">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title Text view"
        android:id="@+id/rssFeedItemTitleTextView"
        android:layout_above="@+id/rssFeedItemDescriptionTextView"
        android:layout_toRightOf="@+id/rssFeedItemLetterTextView"
        android:layout_toEndOf="@+id/rssFeedItemLetterTextView"
        android:textSize="20dp"
        android:maxLines="1"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="iusyg esiuyges iuyg ewiuty ewityiy iewgywoiy huy oirehy oirehyoiure hoire hyorehy oirey hoire hyoire hyoire heiuyg iueiue ygiues ygiue giue giuegiuew giuewtg8uew gtoiuew gtoiuew gtoiuew gt"
        android:id="@+id/rssFeedItemDescriptionTextView"
        android:textSize="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/rssFeedItemLetterTextView"
        android:layout_toEndOf="@+id/rssFeedItemLetterTextView"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="X"
        android:id="@+id/rssFeedItemLetterTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="44dp" />
</RelativeLayout>
